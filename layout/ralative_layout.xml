<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
<ImageView
    android:id="@+id/profileImg"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:src="@drawable/profile_img"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/callingTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calling Via SIM 1"
        android:textSize="16sp"
        android:layout_below="@id/profileImg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Md. Rakibul Islam Dipu"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_below="@id/callingTV"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile : 019********"
        android:textSize="16sp"
        android:layout_below="@id/name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mobile"
        android:gravity="center"
        android:layout_marginTop="70dp"
        android:id="@+id/row1"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/contacts"
            >
            <ImageView
                android:id="@+id/contImg"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_contact"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contacts"
                android:layout_below="@id/contImg"
                android:layout_marginTop="10dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/hold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/contacts"
            android:layout_marginHorizontal="90dp"
            >
            <ImageView
                android:id="@+id/holdImg"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_hold"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hold"
                android:layout_below="@id/holdImg"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/speaker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/hold"
            >
            <ImageView
                android:id="@+id/speakerImg"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_speaker"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Speaker"
                android:layout_below="@id/speakerImg"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"/>
        </RelativeLayout>




    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/row1"
        android:gravity="center"
        android:layout_marginTop="70dp"
        android:id="@+id/row2"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mute"
            >
            <ImageView
                android:id="@+id/muteImg"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_mute"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mute"
                android:layout_below="@id/muteImg"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/recordVoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/mute"
            android:layout_marginHorizontal="70dp"
            >
            <ImageView
                android:id="@+id/recordVoiceImg"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_record_voice"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Record Voice"
                android:layout_below="@id/recordVoiceImg"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/dialpad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/recordVoice"
            >
            <ImageView
                android:id="@+id/dialpadImg"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_dial_pad"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dial pad"
                android:layout_below="@id/dialpadImg"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"/>
        </RelativeLayout>




    </RelativeLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/row2"
    android:gravity="center"
    android:layout_marginTop="60dp"
    >
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_call"
        app:tint = "#03A9F4"/>
</RelativeLayout>


</RelativeLayout>