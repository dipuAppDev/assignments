<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ImageView
        android:id="@+id/logoImg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/logo_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/title_text"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@id/logoImg"
        app:layout_constraintStart_toStartOf="@id/logoImg"
        app:layout_constraintTop_toBottomOf="@id/logoImg" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/icUser"
        android:src="@drawable/ic_user"
        app:layout_constraintEnd_toStartOf="@id/username"
        app:layout_constraintTop_toTopOf="@id/username"
        app:layout_constraintBottom_toBottomOf="@id/username"
        android:layout_marginEnd="15dp"/>
    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="15dp"
        android:hint="@string/username"
        android:paddingBottom="20dp"
        android:textColorHint="@color/hint_color"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        android:drawableEnd="@drawable/ic_user_info"
        android:inputType="text"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/icEmail"
        android:src="@drawable/ic_email"
        app:layout_constraintEnd_toStartOf="@id/email"
        app:layout_constraintTop_toTopOf="@id/email"
        app:layout_constraintBottom_toBottomOf="@id/email"
        android:layout_marginEnd="15dp"/>
    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="15dp"
        android:hint="@string/email"
        android:paddingBottom="20dp"
        android:textColorHint="@color/hint_color"
        app:layout_constraintTop_toBottomOf="@id/username"
        android:inputType="textEmailAddress"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/icPassword"
        android:src="@drawable/ic_pass"
        app:layout_constraintTop_toTopOf="@id/password"
        app:layout_constraintBottom_toBottomOf="@id/password"
        app:layout_constraintEnd_toStartOf="@id/password"
        android:layout_marginEnd="15dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/password"
        android:hint="@string/password"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toBottomOf="@id/email"
        android:textColorHint="@color/hint_color"
        android:layout_marginTop="40dp"
        android:drawableEnd="@drawable/ic_reload"
        android:paddingBottom="20dp"
        android:inputType="textPassword"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/confirmPasswordIc"
        android:src="@drawable/ic_pass"
        app:layout_constraintTop_toTopOf="@id/confirmPassword"
        app:layout_constraintBottom_toBottomOf="@id/confirmPassword"
        app:layout_constraintEnd_toStartOf="@id/confirmPassword"
        android:layout_marginEnd="15dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/confirmPassword"
        android:hint="@string/confirm_password"
        android:textColorHint="@color/hint_color"
        android:paddingBottom="20dp"
        android:drawableEnd="@drawable/ic_reload"
        app:layout_constraintTop_toBottomOf="@id/password"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="40dp"
        android:inputType="textPassword"
        />
        <Button
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:id="@+id/regBtn"
            android:text="@string/register_btn_text"
            app:cornerRadius="2dp"
            app:layout_constraintTop_toBottomOf="@id/confirmPassword"
            app:layout_constraintStart_toStartOf="@id/confirmPasswordIc"
            app:layout_constraintEnd_toEndOf="@id/confirmPassword"
            android:layout_marginTop="40dp"
            android:textSize="18sp"
            android:textAllCaps="true"
            android:letterSpacing="0.05"
            android:paddingVertical="15dp"
            android:backgroundTint="@color/btn_color"/>
    <TextView
        android:id="@+id/alreadyHaveAccText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/already_have_account_text"
        android:textSize="17sp"
        app:layout_constraintTop_toBottomOf="@id/regBtn"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/regBtn"
        app:layout_constraintEnd_toEndOf="@id/regBtn"
        android:layout_marginTop="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loginText"
        android:text="@string/login_text"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@color/btn_color"
        app:layout_constraintTop_toTopOf="@id/alreadyHaveAccText"
        app:layout_constraintBottom_toBottomOf="@id/alreadyHaveAccText"
        app:layout_constraintStart_toEndOf="@id/alreadyHaveAccText"
        android:layout_marginStart="4dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>